<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PassManager.Views.FlyoutItems.EntireItemsView" BackgroundColor="{StaticResource PageBottomColor}"
             ControlTemplate="{StaticResource ListViewItemTemplate}" Title="{Binding PageTitle}">
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" Padding="10">
            <Label Text="{Binding PageTitle}" FontSize="20" VerticalTextAlignment="Center"/>
            <Button Text="Search" FontSize="10" WidthRequest="60" CornerRadius="40" HorizontalOptions="EndAndExpand"/>
        </StackLayout>
    </Shell.TitleView>
</ContentPage>
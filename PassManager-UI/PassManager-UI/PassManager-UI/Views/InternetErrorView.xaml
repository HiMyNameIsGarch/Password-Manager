<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             x:Class="PassManager.Views.InternetErrorView"
             CloseWhenBackgroundIsClicked="False">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Margin="20" Padding="20" BackgroundColor="{StaticResource FrameTopColor}">
        <Label FontSize="Medium" Text="You don't have internet connection!" TextColor="#e63946"/>
        <StackLayout Orientation="Horizontal" Padding="20">
            <Button Text="Quit" BackgroundColor="{StaticResource PageTopColor}" TextColor="{StaticResource FrameTopColor}"
                    Padding="5" Command="{Binding QuitApp}" HorizontalOptions="StartAndExpand" CornerRadius="30" />
            <Button Text="Refresh" BackgroundColor="{StaticResource PageTopColor}" TextColor="{StaticResource FrameTopColor}" 
                    Padding="5" Command="{Binding RefreshPage}" HorizontalOptions="EndAndExpand" CornerRadius="30"/>
        </StackLayout>
    </StackLayout>
</pages:PopupPage>
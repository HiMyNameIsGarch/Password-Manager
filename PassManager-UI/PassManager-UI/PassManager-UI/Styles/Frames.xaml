<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <Style x:Key="RoundFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="HeightRequest" Value="35"/>
        <Setter Property="WidthRequest" Value="35"/>
        <Setter Property="CornerRadius" Value="30"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style x:Key="CustomFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="BorderColor" Value="{DynamicResource PowderBlueColor}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
        <Setter Property="CornerRadius" Value="{OnPlatform Android=30, UWP=25}"/>
        <Setter Property="Margin" Value="10,6,10,6"/>
    </Style>
</ResourceDictionary>